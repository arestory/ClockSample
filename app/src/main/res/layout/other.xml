<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:watch="http://schemas.android.com/apk/res-auto"
    xmlns:numClock="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout

        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ares.ywq.com.animationsample.MyView.WatchView
            android:id="@+id/watchView"
            android:layout_marginTop="5dp"
            watch:sColor="#fa7915"
            watch:hColor="@color/white"
            watch:mColor="@color/white"
            watch:numColor="@color/white"
            watch:inCircleColor="@color/gray"
            watch:outCircleColor="@color/gray"
            android:layout_width="240dp"
            android:layout_height="240dp" />

    <ares.ywq.com.animationsample.MyView.LightClock

        android:id="@+id/lightLock"
        android:layout_marginTop="20dp"
        android:layout_width="240dp"
        android:layout_height="240dp" />

        <ares.ywq.com.animationsample.MyView.NumClock
            android:layout_width="150dp"
            android:background="#000000"
            android:layout_marginTop="20dp"

            android:id="@+id/numClock"
            watch:lineColor="#f72d26"
            watch:pointColor="#fcd512"
            watch:showSecond="true"
            android:layout_height="120dp" />

    </LinearLayout>

</ScrollView>
