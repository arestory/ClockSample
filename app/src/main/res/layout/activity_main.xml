<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:watch="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <ares.ywq.com.animationsample.MyView.ClockNumView
        android:layout_width="100dp"
        watch:num="8"
        watch:clockNumColor="@color/colorPrimary"
        android:layout_height="100dp" />

    <ares.ywq.com.animationsample.MyView.WatchView
        android:layout_marginTop="10dp"
        android:id="@+id/watchView"
        watch:sColor="#fa7915"
        watch:hColor="@color/white"
        watch:mColor="@color/white"
        watch:numColor="@color/white"
        watch:inCircleColor="@color/gray"
        watch:outCircleColor="@color/gray"
        android:layout_width="300dp"
        android:layout_height="300dp" />

    <TextView
        android:id="@+id/tv"
        android:textSize="22sp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
